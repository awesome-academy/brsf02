<% provide :title, t(".title", name: resource_name.to_s.humanize) %>
<h1><%= t ".title", name: resource_name.to_s.humanize %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label t(".email") %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".name") %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".avatar") %><br />
        <%= f.file_field :avatar %>
      </div>

      <div class="field">
        <%= f.label t(".password") %> <i><%= t ".leave_blank" %></i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= t ".min_characters", val: @minimum_password_length %></em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label t(".password_confirmation") %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".current_password") %> <i><%= t ".need_current_password" %></i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".update"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3 class="text-center"><%= t ".delete_account" %></h3>

    <div class="text-center"><%= link_to t(".delete_account"), registration_path(resource_name), data:
          {confirm: t(".sure?")}, method: :delete, class: "btn btn-danger" %></div>

  </div>
</div>
